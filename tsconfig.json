{
  "extends": "ts-node/node16/tsconfig.json",
  "ts-node": {
    "compilerOptions": {
      "types": ["node", "jest", "express"],
      "module": "es6",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "es2022", // es5
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
        "*": [
          "node_modules/*",
          "src/types/*"
        ]
      }
    },
    "exclude": ["grpc/**/*"]
  },
