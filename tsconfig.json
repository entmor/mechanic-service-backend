{
  "compilerOptions": {
    "module": "commonjs",
//    "types": ["node", "jest", "express"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2022", // es5
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "include": ["services/**/*"],
  "exclude": ["grpc/**/*"]
}
